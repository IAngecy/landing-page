{
  "buildCommand": "yarn build",
  "devCommand": "yarn dev",
  "installCommand": "yarn install --frozen-lockfile",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/**/*.{ts,tsx}": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NEXT_PRIVATE_STANDALONE": "true",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
